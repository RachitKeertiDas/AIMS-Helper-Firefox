{
    "manifest_version":2,
    "name": "AIMS-Helper",
    "version": "0.1",
    "description":"Help students to calculate their GPA and create an unofficial summary",
    "permissions": [
        "activeTab","storage","tabs"
    ],
    "icons": {
        "48":"icons/IITH-48.png"
    },
    "browser_action" : {
        "default_icon": "icons/IITH-32.png",
        "default_title": "AIMS-Helper",
        "default_popup": "popup/popup.html"
    },
    "content_scripts":[
    	{
    		"matches":["<all_urls>"],
    		"js":["content_scripts/content.js"]
    	}
    ],

    "web_accessible_resources": [
        "assets/spinner.gif"
    ]

}